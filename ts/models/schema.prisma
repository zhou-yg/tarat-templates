datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

model TodoItem {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  modifiedAt DateTime @default(now())

  status      String
  description String
}
